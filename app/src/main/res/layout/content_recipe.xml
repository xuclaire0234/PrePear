<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView_in_recipe_list"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:background="@drawable/below"
            tools:srcCompat="@drawable/ic_baseline_add_photo_alternate_24">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/recipe_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Recipe Title"
                android:textSize="35sp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/preparation_time_texts_view_recipe_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:text="Preparation Time: "
                android:textColor="@color/dark_grey">
            </TextView>
            <TextView
                android:id="@+id/number_of_servings_texts_view_recipe_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:text="Number Of Servings: "
                android:textColor="@color/dark_grey">
            </TextView>
            <TextView
                android:id="@+id/recipe_category_texts_view_recipe_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:text="Recipe Category: "
                android:textColor="@color/dark_grey">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>